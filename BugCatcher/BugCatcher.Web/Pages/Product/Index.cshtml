@page
@model IndexModel

@{
    ViewData["Title"] = "Products";
}

<h2>Browse Products</h2>

@if(Model.Products != null) 
{
    foreach(var item in Model.Products)
    {
        <div>
            <h4>@item.Name</h4>
            <p>@item.Description</p>
            <p>@item.Builds.Count</p>
        </div>
    
    }
}