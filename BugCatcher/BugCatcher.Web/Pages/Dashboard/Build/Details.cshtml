@page
@model DetailsModel
@{
    ViewData["Title"] = "Build Details";
    ViewData["CurrentCompany"] = Model.CurrentProduct.Company.Name;
    ViewData["CurrentCompanyId"] = Model.CurrentProduct.Company.Id;
}

<div class="container">
    <a asp-page="/Dashboard/Product/Details" asp-route-id="@Model.CurrentBuild.ProductId">
        <h3>Product:  @Model.CurrentBuild.ProductName</h3>
    </a>
    <h4>Version Number: @Model.CurrentBuild.Name</h4>

    <a id="createReportButton" class="btn btn-primary"
       asp-page="/Dashboard/Report/Create">
        New Report
    </a>
    <button type="button" class="btn btn-primary">Statistics</button>
    <button type="button" class="btn btn-primary">Export</button>
</div>

<section style="background:none">
    <div class="container">
        <div class="row" style="display: flex;  display: -webkit-flex; flex-wrap: wrap; padding-left:10rem;">
            @{
                foreach (var report in Model.Reports)
                {
                    <div class="card col-md-4" style="width: 30rem;">
                        <div class="card-header" data-background-color="red">
                            <div class="category">
                                Bug
                            </div>
                        </div>
                        <div class="card-content">
                            <h5 class="title">@report.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@report.Id</h6>
                            <p class="card-text">@report.Description</p>
                            <a asp-page="/Dashboard/Report/Details" asp-route-id="@report.Id">
                                See more&hellip;
                            </a>
                        </div>
                        <div class="card-footer text-muted">
                            <a href="#" class="btn btn-primary btn-sm">Resolve</a>
                            <a href="#" class="btn btn-primary btn-sm">Comment</a>
                            <div class="stats">
                                <i class="material-icons">access_time</i> updated 4 minutes ago
                            </div>
                        </div>

                    </div>
                }
            }

        </div>
    </div>
</section>

